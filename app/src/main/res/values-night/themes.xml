<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ArielCast" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0288D1</item>
        <item name="colorPrimaryVariant">#60B0DC</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:layoutDirection">ltr</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="myButtonTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColorPrimary">@color/gray</item>
        <item name="colorButtonNormal">@color/gray</item>
        <item name="android:layoutDirection">ltr</item>
    </style>

    <style name="Theme.ArielCast.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:layoutDirection">ltr</item>
    </style>

    <style name="Theme.ArielCast.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ArielCast.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>